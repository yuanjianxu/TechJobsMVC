<h2>@ViewBag.title</h2>

<h3>@ViewBag.jobs.Count Result(s)</h3>

@{
    // TODO #3 - Use the same list display from Views/Search/Index.cshtml
}

@if (ViewBag.jobs != null)
{
    <table>
        @for (int i = 0; i < ViewBag.jobs.Count; i++)
        {
            <tr class="@( i % 2 == 0 ? "even" : "odd" ) ">
                <td>
                    @foreach (KeyValuePair<string, string> keyValuePair in ViewBag.jobs[i])
                    {
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="@keyValuePair.Key" asp-route-value="@keyValuePair.Value"><strong>@keyValuePair.Key :</strong></a>
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="@keyValuePair.Key" asp-route-value="@keyValuePair.Value">@keyValuePair.Value</a><br>
                    }
                </td>
            </tr>
        }
    </table>
}



